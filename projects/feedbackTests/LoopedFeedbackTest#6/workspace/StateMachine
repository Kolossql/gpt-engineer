module StateMachine(
    input wire clk,
    input wire reset_n,
    input wire enable,
    output wire red,
    output wire yellow,
    output wire green,
    input wire [1:0] state,
    input wire [4:0] timer
);

    // Output signals
    assign red = (state == 2'b00);
    assign yellow = (state == 2'b10);
    assign green = (state == 2'b01);

endmodule
